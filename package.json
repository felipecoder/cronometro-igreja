{
    "name": "cronometro-igreja",
    "productName": "Cronômetro da Igreja",
    "build": {
        "appId": "com.boasnovas.timer",
        "productName": "Cronômetro da Igreja",
        "directories": {
            "buildResources": "build"
        },
        "files": [
            "dist/**",
            "electron/**",
            "node_modules/**",
            "package.json"
        ],
        "mac": {
            "icon": "build/icon.icns",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "win": {
            "icon": "build/icon.ico",
            "target": [
                "nsis",
                "zip"
            ],
            "artifactName": "${productName}-Setup-${version}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "build/icon.ico",
            "uninstallerIcon": "build/icon.ico",
            "installerHeaderIcon": "build/icon.ico",
            "shortcutName": "Cronômetro da Igreja"
        }
    },
    "version": "1.0.0",
    "main": "electron/main.js",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build && electron-builder",
        "preview": "vite preview"
    },
    "dependencies": {
        "pinia": "^3.0.4",
        "vue": "^3.4.0",
        "vue-router": "^4.6.3"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^6.0.1",
        "autoprefixer": "^10.4.0",
        "concurrently": "^8.0.0",
        "electron": "^29.0.0",
        "electron-builder": "^24.0.0",
        "electronmon": "^2.0.4",
        "postcss": "^8.4.0",
        "tailwindcss": "^3.4.0",
        "vite": "^5.0.0",
        "vite-plugin-electron": "^0.29.0",
        "wait-on": "^9.0.1"
    }
}
